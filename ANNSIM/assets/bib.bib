	urldate = {2023-02-03},
	author = {Gao, Ming},
	year = {2022},
	keywords = {elections, forecasting, topology-none, turnout},
	annote = {Diff from us:
forecasting elections, not merely modeling them (like we and Laver do)
this is not based on a social network at all!


@article{sobkowicz_quantitative_2016,
	title = {Quantitative {Agent} {Based} {Model} of {Opinion} {Dynamics}: {Polish} {Elections} of 2015},
	volume = {11},
	issn = {1932-6203},
	shorttitle = {Quantitative {Agent} {Based} {Model} of {Opinion} {Dynamics}},
	url = {https://journals.plos.org/plosone/article?id=10.1371/journal.pone.0155098},
	doi = {10.1371/journal.pone.0155098},
	abstract = {We present results of an abstract, agent based model of opinion dynamics simulations based on the emotion/information/opinion (E/I/O) approach, applied to a strongly polarized society, corresponding to the Polish political scene between 2005 and 2015. Under certain conditions the model leads to metastable coexistence of two subcommunities of comparable size (supporting the corresponding opinions)—which corresponds to the bipartisan split found in Poland. Spurred by the recent breakdown of this political duopoly, which occurred in 2015, we present a model extension that describes both the long term coexistence of the two opposing opinions and a rapid, transitory change due to the appearance of a third party alternative. We provide quantitative comparison of the model with the results of polls and elections in Poland, testing the assumptions related to the modeled processes and the parameters used in the simulations. It is shown, that when the propaganda messages of the two incumbent parties differ in emotional tone, the political status quo may be unstable. The asymmetry of the emotions within the support bases of the two parties allows one of them to be ‘invaded’ by a newcomer third party very quickly, while the second remains immune to such invasion.},
	language = {en},
	number = {5},
	urldate = {2023-02-03},
	journal = {PLOS ONE},
	author = {Sobkowicz, Pawel},
	month = may,
	year = {2016},
	note = {Publisher: Public Library of Science},
	keywords = {campaign-messageTypes, elections, empirical, forecasting, massMedia, opinions-discrete, opinions-scalar, parties-multiple, polarization, receptivity-EIO, topology-grid},
	pages = {e0155098},
	annote = {doesn’t really address turnout, as far as I can see
},
	file = {Full Text PDF:/home/stephen/snap/zotero-snap/common/Zotero/storage/ZNLLZR93/Sobkowicz - 2016 - Quantitative Agent Based Model of Opinion Dynamics.pdf:application/pdf},
}

